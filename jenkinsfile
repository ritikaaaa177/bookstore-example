pipeline{
   agent any

   tools{
    maven 'Maven'
   }
    stages{


         stage("Test Application"){
            steps{
                bat "mvn test"
            }
            
        }

        stage("Package Application"){
            steps{
              bat "mvn package"
            }
            
        }

          stage("Deploy to the container"){
            steps{
            deploy adapters: [tomcat9(credentialsId: 'bookstoreapp', path: '', url: 'http://172.19.167.76:8080')], contextPath: '/app.', war: '**/*.war'
            }
            
        }
             
        }

    }
   
